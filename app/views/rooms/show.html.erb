<h3>施設詳細</h3>

<% if flash[:notice]%>
    <p class = "notice"><%= flash[:notice] %></p>
<% end %>

<%= link_to "戻る", :back %>
<%= link_to "編集", [:edit_room]%>
<%= form_with model: @room do |f| %>
    <table>
        <tr>
            <th><%= f.label :name ,"施設名" %></th>
            <td><%= f.text_field :name %></td>
        </tr>

        <tr>
            <th><%= f.label :introduction ,"施設詳細" %></th>
            <td><%= f.text_field :introduction %></td>
        </tr>

        <tr>
            <th><%= f.label :price ,"料金" %></th>
            <td><%= f.text_field :price %></td>
        </tr>

        <tr>
            <th><%= f.label :address ,"住所" %></th>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
            <th><%= f.label :img ,"施設画像" %></th>
            <td><%= f.file_field :img %></td>
        </tr>
    </table>
    <div class = "hidden">
        <% f.hidden_field :user_id, value: @user_id %>
        <% f.hidden_field :room_id, value: @room_id %>
    </div>

    <%= link_to "予約する" , new_room_reservation_path(room_id: @room.id,user_id: current_user) %>
<% end %>