<h3>施設詳細</h3>

<% if flash[:notice]%>
    <p class = "notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @room do |f| %>
    <table>
        <tr>
            <th><%= f.label :name ,"施設名" %></th>
            <td><%= f.text_field :name %></td>
        </tr>

        <tr>
            <th><%= f.label :introduction ,"施設詳細" %></th>
            <td><%= f.text_field :introduction %></td>
        </tr>

        <tr>
            <th><%= f.label :price ,"料金" %></th>
            <td><%= f.text_field :price %></td>
        </tr>

        <tr>
            <th><%= f.label :address ,"住所" %></th>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
            <th><%= f.label :img ,"施設画像" %></th>
            <td><%= f.file_field :img %></td>
        </tr>
    </table>
<% end %>