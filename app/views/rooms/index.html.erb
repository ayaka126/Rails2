<h3>登録済み施設一覧</h3>
<%= link_to "施設の新規登録" ,[:new_room]%>
    <table>
        <thead>
            <tr>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>料金</th>
                <th>作成日</th>
            </tr>
        </thead>

        <tbody>
            <% @rooms.each do |room| %>
            <tr>
                <td><%= room.img %></td>
                <td><%= link_to room.name , room %></td>
                <td><%= room.introduction %></td>
                <td><%= room.price %></td>
                <td><%= room.created_at.to_s(:datetime_jp) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    
